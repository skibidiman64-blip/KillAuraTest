-- ‚öîÔ∏è Universal Sword Reach KillAura + Draggable GUI Slider
-- Omega draggable edition üî•

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()

local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local Frame = Instance.new("Frame", ScreenGui)
local SliderBack = Instance.new("Frame", Frame)
local SliderButton = Instance.new("TextButton", SliderBack)
local Label = Instance.new("TextLabel", Frame)

ScreenGui.ResetOnSpawn = false

Frame.Size = UDim2.new(0, 250, 0, 100)
Frame.Position = UDim2.new(0.5, -125, 0.8, 0)
Frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
Frame.Active = true
Frame.Draggable = true -- üî• makes the frame movable

Label.Size = UDim2.new(1, 0, 0.3, 0)
Label.Position = UDim2.new(0, 0, 0, 0)
Label.BackgroundTransparency = 1
Label.TextColor3 = Color3.fromRGB(255, 255, 255)
Label.TextScaled = true
Label.Text = "Reach: 20"

SliderBack.Size = UDim2.new(0.9, 0, 0.3, 0)
SliderBack.Position = UDim2.new(0.05, 0, 0.5, 0)
SliderBack.BackgroundColor3 = Color3.fromRGB(70, 70, 70)

SliderButton.Size = UDim2.new(0, 20, 1, 0)
SliderButton.Position = UDim2.new(0, 0, 0, 0)
SliderButton.BackgroundColor3 = Color3.fromRGB(150, 150, 255)
SliderButton.Text = ""

local UIS = game:GetService("UserInputService")
local dragging = false
local reachDistance = 20
local Tool = nil

-- Detect sword
LocalPlayer.Character.ChildAdded:Connect(function(child)
    if child:IsA("Tool") then
        Tool = child
    end
end)

-- Drag slider
SliderButton.MouseButton1Down:Connect(function()
    dragging = true
end)
UIS.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)

UIS.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local relX = math.clamp((input.Position.X - SliderBack.AbsolutePosition.X) / SliderBack.AbsoluteSize.X, 0, 1)
        SliderButton.Position = UDim2.new(relX, -10, 0, 0)
        reachDistance = math.floor(10 + relX * 40) -- 10‚Äì50 studs
        Label.Text = "Reach: " .. tostring(reachDistance)
    end
end)

-- KillAura loop
task.spawn(function()
    while true do
        task.wait(0.1)
        if Tool and Tool.Parent == Character then
            for _,plr in pairs(Players:GetPlayers()) do
                if plr ~= LocalPlayer and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
                    local mag = (plr.Character.HumanoidRootPart.Position - Character.HumanoidRootPart.Position).Magnitude
                    if mag <= reachDistance then
                        firetouchinterest(plr.Character.HumanoidRootPart, Tool.Handle, 0)
                        task.wait()
                        firetouchinterest(plr.Character.HumanoidRootPart, Tool.Handle, 1)
                    end
                end
            end
        end
    end
end)
