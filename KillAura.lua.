-- Roblox PvP Sword Fighting Reach Script
-- Adjustable reach distance for better PvP advantage

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local HumanoidRootPart = Character:WaitForChild("HumanoidRootPart")

-- Configuration
local REACH_DISTANCE = 50 -- Adjust this value to change your reach (default 25)
local SWORD_NAME = "Sword" -- Change this to match your sword's name

-- Find the sword tool
local function findSword()
    for _, tool in ipairs(Character:GetChildren()) do
        if tool:IsA("Tool") and (string.find(tool.Name:lower(), SWORD_NAME:lower()) or tool:FindFirstChildOfClass("SwordConstraint")) then
            return tool
        end
    end
    return nil
end

-- Main function
local function extendReach()
    local sword = findSword()
    if not sword then
        warn("No sword found in character!")
        return
    end

    -- Create a remote hit function
    local remoteHit
    for _, v in ipairs(getconnections(sword.Activated)) do
        local script = v.Function and getfenv(v.Function).script
        if script then
            for _, child in ipairs(script:GetDescendants()) do
                if child:IsA("RemoteEvent") and child.Name:lower():find("hit") then
                    remoteHit = child
                    break
                end
            end
        end
    end

    if not remoteHit then
        warn("Could not find hit remote!")
        return
    end

    -- Original hit function
    local originalHit = remoteHit.FireServer
    remoteHit.FireServer = function(self, ...)
        local args = {...}
        if #args >= 2 and typeof(args[2]) == "Vector3" then
            -- Extend the hit position
            local direction = (args[2] - HumanoidRootPart.Position).Unit
            args[2] = HumanoidRootPart.Position + (direction * REACH_DISTANCE)
        end
        return originalHit(self, unpack(args))
    end

    print("Reach extended successfully! Current reach:", REACH_DISTANCE)
end

-- Run the script
Character:WaitForChild("Humanoid").Died:Connect(function()
    warn("Character died - script stopped")
end)

extendReach()
